name: Testing for custom actions

on :  
  push:
    branches: main
  workflow_dispatch:  

jobs:
  job1:
    runs-on: ubuntu-latest
    
    steps:
      - name: clone the repository
        uses: actions/checkout@v3

      - name: setup the node
        uses: actions/setup-node@v3
        with:
          node-version: 20   

      - name: print pwd
        run: pwd    

      - name: use cutsom actions
      # ./ => action.yml file is in current directory
        uses: ./  

